{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compila il file attivo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/*.h",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-lm",
                // "-std=c99",
                // "-O3",
                // "-fno-math-errno",
                // "-flto",
                "-I",
                // "${workspaceFolder}/headers/",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}